{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "traceResolution": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    ".next/types/**/*.ts",
    "./types/new-types.d.ts",
    "./types/osh-js.d.tsx",
    "new-types.d.ts",
    "web/types/**/*.ts",
    "node_modules/cypress/types/mocha/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
