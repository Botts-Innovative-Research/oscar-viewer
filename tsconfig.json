{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "traceResolution": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
    ".next/types/**/*.ts",
    "./types/osh-js.d.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
